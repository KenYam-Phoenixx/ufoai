/* land_li_yellow: big yellow light with additional flare effect (used outside) */
{
	material tex_lights/land_li_yellow
	{
		texture tex_lights/land_li_yellow
	}
	{
		texture pt/fx/rfx_lali_orange_k
		pulse 0.03
		rotate 0.2
	}
	{
		flare 2
		color 1.0 1.0 0.7
	}
}

