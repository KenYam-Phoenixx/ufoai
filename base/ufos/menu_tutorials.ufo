	// ==================
	// background
	// ==================

	pic back_ul
	{
		image   menu/main_ul
		pos             "0 0"
	}

	pic back_ur
	{
		image   menu/main_ur
		pos             "512 0"
	}

	pic back_ll
	{
		image   menu/main_ll
		pos             "0 512"
	}

	pic back_lr
	{
		image   menu/main_lr
		pos             "512 512"
	}

	string headline
	{
		string  "_Tutorials"
		pos             "630 170"
		font f_big
	}

	pic button_back
	{
		pos	"640 520"
		click	{ cmd "mn_pop" }
