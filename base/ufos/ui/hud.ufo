	// ==================
	// override ahud confunc
	// ==================

	confunc crouch_checkbox_disable {
		*left.bt_crouch_reservation@disabled = true
	}
	confunc crouch_checkbox_clear	{
		*left.bt_crouch_reservation@disabled = false
		*(checkbox)left.bt_crouch_reservation@current = 0
	}
	confunc crouch_checkbox_check	{
		*left.bt_crouch_reservation@disabled = false
		*(checkbox)left.bt_crouch_reservation@current = 1
	}

	confunc hudselect {
		*cvar:selected_soldier = <1>
	}
	confunc hudenable {
		*cvar:i = ( <1> - 1 )
		*team_selection.bt_actor<cvar:i>@disabled = false
		delete *cvar:i
	}
	confunc huddisable {
		*cvar:i = ( <1> - 1 )
		*team_selection.bt_actor<cvar:i>@disabled = true
		delete *cvar:i
	}

