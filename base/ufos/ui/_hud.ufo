	/* Firemode console functions ===================================*/

	/* texture map
		checkbox:
		"hud/checkbox" (inactive)	->	texl "0 0"	texh "31 31"
		"hud/checkbox" (active)	->	texl "0 32"	texh "31 63"
		firemode:
		"hud/firemode" (active)	->	texl "0 0"	texh "214 63"
		"hud/firemode" (inactive)	->	texl "0 64"	texh "214 128"
	*/

	confunc set_right_inv {
		*node:root.bt_right_fm<1>@invis = true
	}

	/**
	 * @param<1> fd index
	 * @param<2> status
	 */
	confunc set_right_vis {
		*cvar:tmp = "<2>"
		*node:root.bt_right_fm<1>@invis = false

		if ( *cvar:tmp eq "1" ) {
			*node:root.bt_right_fm<1>@texl = "0 0"
			*node:root.bt_right_fm<1>@texh = "214 63"
		} else {
			*node:root.bt_right_fm<1>@texl = "0 64"
			*node:root.bt_right_fm<1>@texh = "214 128"
		}
		delete *cvar:tmp
	}

	/* Firemode checkbox console functions (see also the "xxx_inv" functions above) ===================================*/

	confunc set_right_cb_ina {
		*node:root.bt_right_fm<1>.cb@texl = "0 0"
		*node:root.bt_right_fm<1>.cb@texh = "31 31"
		*node:root.bt_right_fm<1>.cb@invis = false
	}

	confunc set_right_cb_a {
		*node:root.bt_right_fm<1>.cb@texl = "0 32"
		*node:root.bt_right_fm<1>.cb@texh = "31 63"
		*node:root.bt_right_fm<1>.cb@invis = false
	}

	confunc set_right_cb_invis {
		*node:root.bt_right_fm<1>.cb@invis = true
	}

	/**
	 * @param<1> hand (char) (l or r for left or right)
	 * @param<2> firedef index (int)
	 * @param<3> firedef reaction fire (int) (1= true, 0= false)
	 * @param<4> status
	 * @param<5> name (string)
	 * @param<6> TUs (string)
	 * @param<7> shots (string)
	 * @param<8> tooltip
	 * @example cvar strings: mn_l_fm_nameX, mn_r_fm_nameX
	 */
	confunc set_firemode {
		*cvar:mn_<1>_fm_name<2> = "<5>"
		*cvar:mn_<1>_fm_tu<2> = "<6>"
		*cvar:mn_<1>_fm_shot<2> = "<7>"
		*cvar:mn_<1>_fm_tt_tu<2> = "<8>"
		if ( <1> eq "l" ) {
			cmd "set_left_vis <2> <4>;"
			if ( <3> eq "0" ) {
				cmd "set_left_cb_invis <2>;"
			}
		} else {
			cmd "set_right_vis <2> <4>;"
			if ( <3> eq "0" ) {
				cmd "set_right_cb_invis <2>;"
			}
		}
	}

	/**
	 * @param<1> hand (char) (l or r for left or right)
	 * @param<2> firedef index (int)
	 * @param<3> activate (1=activate, 0=deactivate)
	 */
	confunc set_firemode_checkbox {
		if ( <1> eq "l" ) {
			if ( <3> eq "1" ) {
				cmd "set_left_cb_a <2>;"
			} else {
				cmd "set_left_cb_ina <2>;"
			}
		} else {
			if ( <3> eq "1" ) {
				cmd "set_right_cb_a <2>;"
			} else {
				cmd "set_right_cb_ina <2>;"
			}
		}
	}

	confunc hide_firemodes {
		*cvar:i = 0
		while ( *cvar:i < 8 ) {
			cmd "set_left_inv <cvar:i>;"
			cmd "set_right_inv <cvar:i>;"
			*cvar:i = ( *cvar:i + 1 )
		}
		delete *cvar:i
	}
