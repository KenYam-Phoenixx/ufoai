	/* Firemode console functions ===================================*/

	confunc set_left_inv {
		*node:root.bt_left_fm<1>@invis = true
	}

	/**
	 * @param<1> fd index
	 * @param<2> status
	 */
	confunc set_left_vis {
		*cvar:tmp = "<2>"
		*node:root.bt_left_fm<1>@invis = false

		if ( *cvar:tmp eq "1" ) {
			*node:root.bt_left_fm<1>@texl = "0 0"
			*node:root.bt_left_fm<1>@texh = "214 63"
		} else {
			*node:root.bt_left_fm<1>@texl = "0 64"
			*node:root.bt_left_fm<1>@texh = "214 128"
		}
		delete *cvar:tmp
	}

	/* Firemode checkbox console functions (see also the "xxx_inv" functions above) ===================================*/

	confunc set_left_cb_ina {
		*node:root.bt_left_fm<1>.cb@texl = "0 0"
		*node:root.bt_left_fm<1>.cb@texh = "31 31"
		*node:root.bt_left_fm<1>.cb@invis = false
	}

	confunc set_left_cb_a {
		*node:root.bt_left_fm<1>.cb@texl = "0 32"
		*node:root.bt_left_fm<1>.cb@texh = "31 63"
		*node:root.bt_left_fm<1>.cb@invis = false
	}

	confunc set_left_cb_invis {
		*node:root.bt_left_fm<1>.cb@invis = true
	}
}

