	// ==================
	// buttons
	// ==================

	func trans_reset
	{
		*s_items	color "1 1 1 0.6"
		*s_humans	color "1 1 1 0.6"
		*s_aliens	color "1 1 1 0.6"
		*s_crafts	color "1 1 1 0.6"
	}
	func trans_items
	{
		cmd "trans_resetscroll; trans_select 0;"
		trans_reset
		*s_items	color "1 1 1 1"
	}
	func trans_humans
	{
		cmd "trans_resetscroll; trans_select 1;"
		trans_reset
		*s_humans	color "1 1 1 1"
	}
	func trans_aliens
	{
		cmd "trans_resetscroll; trans_select 2;"
		trans_reset
		*s_aliens	color "1 1 1 1"
	}
	func trans_crafts
	{
		cmd "trans_resetscroll; trans_select 3;"
		trans_reset
		*s_crafts	color "1 1 1 1"
	}

