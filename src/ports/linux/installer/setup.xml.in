<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<install
 product="ufoai"
 desc="UFO: Alien Invasion"
 version="@VERSION@"
 promptbinaries="yes"
 express="no"
 update_url="http://ufo.myexp.de/updates/updates.txt"
>

 <readme>
  README
 </readme>

 <eula>
  ../../../../GPL
 </eula>

 <component name="UFO:Alien Invasion gamedata" version="@VERSION@" default="yes">
  <option install="true" required="true" size="@SIZE@">
   Base Install
   <help>
    Required for play
   </help>
   <files>
    data.tar
    i18n.tar.bz2
   </files>
  </option>
 </component>

 <component arch="x86_64" name="x86_64" version="@VERSION@">
  <option arch="x86_64" install="true">
   64 bit binaries
   <binary arch="any" libc="any" binpath="bin/ufoai" symlink="ufoai"
          icon="ufo.xpm" name="UFO: Alien Invasion" desc="UFO: Alien Invasion" play="yes">
    ufoai
   </binary>
   <files>
    ufo-x86_64.tar.bz2
    ufo.xpm
   </files>
  </option>
 </component>


 <component if="|(x86,x86_64)" name="i386" version="@VERSION@">
  <option arch="any" install="true">
   32 bit binaries
   <binary arch="any" libc="any" binpath="bin/ufoai" symlink="ufoai"
          icon="ufo.xpm" name="UFO: Alien Invasion" desc="UFO: Alien Invasion" play="yes">
    ufoai
   </binary>
   <files>
    ufo-x86.tar.bz2
   </files>
  </option>
 </component>

 <!-- make sure to grab the linux version from mattn.ninex.info -->
 <component if="|(x86,x86_64)" name="gtkradiant" version="1.5">
  <option arch="any" install="true" default="yes" size="5M">
   GTKRadiant 1.5
   <files>
    gtkradiant.tar.bz2
   </files>
  </option>
 </component>

 <component name="mapsource" version="@VERSION@">
  <option arch="any" install="true" default="yes" size="80M">
   Mapsource files
   <files>
    mapsource.tar.bz2
   </files>
  </option>
 </component>
</install>
