	func testCase angelscript {
		color red = "1 0 0";
		color green = "0 1 0";

		// ok it compile
		node@ test0 = getNode("test_angelscript.testCase0");
		test0.color = green;

		// implicit
		node@ case1 = thisNode;
		node@ test1 = getNode("test_angelscript.testCase1");
		if (case1 !is null) test1.color = green;
		else test1.color = red;

		// explicit to super
		node@ case2 = cast<node>(thisNode);
		node@ test2 = getNode("test_angelscript.testCase2");
		if (case2 !is null) test2.color = green;
		else test2.color = red;

		// explicit to inherited
		wgwindow@ case3 = cast<wgwindow>(case2);
		node@ test3 = getNode("test_angelscript.testCase3");
		if (case3 !is null) test3.color = green;
		else test3.color = red;

		// not possible
		wgcheckbox@ case4 = cast<wgcheckbox>(case2);
		node@ test4 = getNode("test_angelscript.testCase4");
		if (case4 is null) test4.color = green;
		else test4.color = red;
	}

