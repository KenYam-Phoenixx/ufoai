	checkbox checkTest {
		{
			pos "0 0"
			size "10 10"
			current	*cvar:test_check
		}
		angelscript {
			void onClick() {
				color red = "1 0 0";
				color green = "0 1 0";
				cvar@ value = getCvar("test_check");

				thisNode.toggle();
				node@ test19 = getNode("test_angelscript.test19");
				if (value.integer == 0) test19.color = green;
				else test19.color = red;

				thisNode.toggle();
				node@ test20 = getNode("test_angelscript.test20");
				if (value.integer == 1) test20.color = green;
				else test20.color = red;
			}
		}
	}

	func testNodeMethod {
		*cvar:test_check = 1
		call *node:root.checkTest@onClick
	}

